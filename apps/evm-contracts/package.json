{
  "name": "@bltzr-gg/brawlers-evm-contracts",
  "description": "Brawlers EVM contracts",
  "version": "2.1.0",
  "author": {
    "name": "bltzr-gg",
    "url": "https://github.com/bltzr-gg"
  },
  "scripts": {
    "clean": "rimraf ./artifacts ./cache ./coverage ./types ./coverage.json",
    "test": "hardhat test",
    "deploy": "node deploy.js $npm_config_argv",
    "compile": "hardhat compile",
    "lint": "pnpm run lint:sol && pnpm run lint:ts && pnpm run prettier:check",
    "lint:sol": "solhint --max-warnings 0 \"contracts/**/*.sol\"",
    "lint:ts": "eslint --ignore-path ./.eslintignore --ext .js,.ts .",
    "prettier:check": "prettier --check \"**/*.{js,json,md,sol,ts,yml}\"",
    "prettier:write": "prettier --write \"**/*.{js,json,md,sol,ts,yml}\"",
    "build": "pnpm run clean && pnpm run compile && pnpm run lint"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.7",
    "@nomicfoundation/hardhat-ignition": "^0.15.5",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.11",
    "@nomicfoundation/hardhat-toolbox-viem": "^3.0.0",
    "@nomicfoundation/hardhat-viem": "^2.0.3",
    "@openzeppelin/contracts": "^5.0.2",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/chai": "^4.3.17",
    "@types/chai-as-promised": "^7.1.8",
    "chai": "^4.5.0",
    "clean": "link:rimraf ./artifacts ./cache ./coverage ./types ./coverage.json",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "hardhat": "^2.22.9",
    "prettier": "^3.3.3",
    "prettier-plugin-solidity": "^1.4.1",
    "rimraf": "^5.0.10",
    "solhint": "^5.0.3",
    "solhint-plugin-prettier": "^0.1.0",
    "typescript": "~5.0.4",
    "viem": "^2.20.0"
  }
}
