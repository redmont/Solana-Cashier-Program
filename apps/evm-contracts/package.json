{
  "name": "@bltzr-gg/brawlers-evm-contracts",
  "description": "Brawlers EVM contracts",
  "version": "2.0.0",
  "author": {
    "name": "bltzr-gg",
    "url": "https://github.com/bltzr-gg"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.7",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.11",
    "@nomicfoundation/hardhat-toolbox-viem": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.9",
    "@nomicfoundation/hardhat-viem": "^2.0.3",
    "@openzeppelin/contracts": "^5.0.2",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/chai": "^4.3.17",
    "@types/fs-extra": "^11.0.4",
    "@types/mocha": "^10.0.7",
    "@types/node": "^20.14.14",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "chai": "^4.5.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "fs-extra": "^11.2.0",
    "hardhat": "^2.22.7",
    "hardhat-deploy": "^0.12.4",
    "hardhat-gas-reporter": "^1.0.10",
    "lodash": "^4.17.21",
    "mocha": "^10.7.0",
    "prettier": "^3.3.3",
    "prettier-plugin-solidity": "^1.3.1",
    "rimraf": "^5.0.10",
    "solhint": "^4.5.4",
    "solhint-plugin-prettier": "^0.1.0",
    "solidity-coverage": "^0.8.12",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "viem": "^2.18.8"
  },
  "types": "artifacts/artifacts.d.ts",
  "files": [
    "artifacts/**/*"
  ],
  "publishConfig": {
    "access": "restricted"
  },
  "scripts": {
    "clean": "rimraf ./artifacts ./cache ./coverage ./types ./coverage.json",
    "compile": "cross-env TS_NODE_TRANSPILE_ONLY=true hardhat compile",
    "coverage": "echo \"Warning: Coverage is currently disabled.\"",
    "deploy": "hardhat deploy",
    "lint": "pnpm run lint:sol && pnpm run lint:ts && pnpm run prettier:check",
    "lint:sol": "solhint --max-warnings 0 \"contracts/**/*.sol\"",
    "lint:ts": "eslint --ignore-path ./.eslintignore --ext .js,.ts .",
    "prettier:check": "prettier --check \"**/*.{js,json,md,sol,ts,yml}\"",
    "prettier:write": "prettier --write \"**/*.{js,json,md,sol,ts,yml}\"",
    "test": "hardhat test",
    "build": "pnpm run clean && pnpm run compile && pnpm run lint"
  }
}
